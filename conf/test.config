/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.
    Use as follows:
        nextflow run lmtani/wf-human_mito -profile test,docker --outdir test
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 4
    max_memory = 12.GB
    max_time   = 2.h

    // Inputs for testing
    fastq      = 'tests/data/*illumina.pe.R{1,2}.fastq.gz'
    alignments = 'tests/data/*_GRCh38.cra{m,i}'
    reference  = 'tests/data/Homo_sapiens_assembly38_chrM_and_alt.fasta'
    outdir     = 'test-output-38'
}
